# === Database ===
DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/ai_digest

# === Anthropic (LLM summarization) ===
ANTHROPIC_API_KEY=sk-ant-...

# === GitHub (releases connector) ===
GITHUB_TOKEN=ghp_...

# === Email delivery (Resend) ===
RESEND_API_KEY=re_...
DIGEST_EMAIL_FROM=digest@example.com
DIGEST_EMAIL_TO=subscriber1@example.com,subscriber2@example.com

# === SMTP fallback (optional, used if RESEND_API_KEY is empty) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# === Digest schedule ===
DIGEST_TIME=08:00
DIGEST_TIMEZONE=America/Argentina/Cordoba

# === S3-compatible object storage ===
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=ai-digest-snapshots
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# === Web output ===
WEB_OUTPUT_DIR=./output/web

# === Logging ===
LOG_LEVEL=INFO
